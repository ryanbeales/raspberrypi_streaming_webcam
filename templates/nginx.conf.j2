worker_processes 4;
pid /run/nginx.pid;
error_log  logs/error_log debug;

events {
  worker_connections  512;
}


http {
  include mime.types;
  sendfile off;
  keepalive_timeout 65;

  server {
    listen 80;

    root /{{ webcam.path }}/;

    location / {
      index index.html;
      add_header Cache-Control no-cache;
      add_header 'Access-Control-Allow-Origin' '*';
      types {
        application/vnd.apple.mpegurl m3u8;
        video/mp2t ts;
        text/html html;
      }
    }
    
  }

}
