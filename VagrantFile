Vagrant.configure("2") do |config|
  config.vm.box = "generic/debian10"

  config.vm.provision "ansible_local" do |ansible|
    ansible.inventory_path = "./inventory/vagrant_webcam_hosts"
    ansible.playbook = "/provision/piwebcam.yml"
  end

  # Debian hyperv image isn't mounting nfs shares here, manually sharing via SMB
  config.vm.synced_folder ".", "/provision/"
end